<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base -->
    <style name="Theme.RastreoIPN" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/ipn_primary</item>
        <item name="colorPrimaryVariant">@color/ipn_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Tema IPN (Guinda) -->
    <style name="Theme.IPN" parent="Theme.RastreoIPN">
        <item name="colorPrimary">@color/ipn_primary</item>
        <item name="colorPrimaryVariant">@color/ipn_dark</item>
        <item name="colorSecondary">@color/ipn_light</item>
    </style>

    <!-- Tema ESCOM (Azul) -->
    <style name="Theme.ESCOM" parent="Theme.RastreoIPN">
        <item name="colorPrimary">@color/escom_primary</item>
        <item name="colorPrimaryVariant">@color/escom_dark</item>
        <item name="colorSecondary">@color/escom_light</item>
    </style>

    <!-- Tema para dialogs -->
    <style name="Theme.RastreoIPN.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>